<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
 
<body>
    <div class="text-light text-center py-5">
         <h1 class="display-4 text__color">URL Shortener</h1>   
    </div>
    <form action="/shortUrls" method="POST">
      <div class="input-group row container index__bg m-auto p-5">
        <input type="url" class="form-control" id="longUrl" name="longUrl" placeholder="Enter long Url..." aria-label="longUrl" aria-describedby="button-addon2">
        <div class="input-group-append">
          <button class="btn btn-warning text-dark" type="submit" id="submit">Convert</button>
        </div>
      </div>
      </form>
    <table class="table table-striped table-responsive index__Card__bg text-light table-hover container my-5 py-4">
        <thead>
          <tr>
            <th>Long URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% urlShortners.forEach(urlShortner => {%>
            <tr>
              <td> <a class="text__color" href="<%= urlShortner.longUrl%>">
                 <%= urlShortner.longUrl%> </a>
              </td>
              <td> <a class="text-info" href="<%=urlShortner.shortUrl%>"><%=urlShortner.shortUrl%></a>
              </td>
              <td><%=urlShortner.clicks%></td>
              <form action="/<%=urlShortner._id%>?_method=DELETE" method="POST">
                <td><button class="btn btn-danger" type="submit" id="submit"><i class="fas fa-trash-alt"></i></button></td>
              </form>
            </tr>
          <%})%>
        </tbody>
    </table>
    
    
  <%- include('./partials/footer.ejs') %>
 
  <%- include('./partials/scriptTag.ejs') %>
</body>
</html>