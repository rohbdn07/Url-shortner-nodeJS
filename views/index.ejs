<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    
    <div class="text-light text-center py-5">
         <h1>URL Shortener</h1>   
    </div>

    <form action="/shortUrls" method="POST">
      <div class="input-group row container index__bg m-auto p-5">
        <input type="url" class="form-control" id="longUrl" name="longUrl" placeholder="Enter long Url..." aria-label="longUrl" aria-describedby="button-addon2" required>
        <div class="input-group-append">
          <button class="btn btn-outline-success text-light" type="submit" id="submit">Convert</button>
        </div>
      </div>
    </form>
    <table class="table table-striped table-responsive table-danger table-hover container my-5 py-4">
        <thead>
          <tr>
            <th>Long URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urlShortners.forEach(urlShortner => {%>
            <tr>
              <td> <a href="<%= urlShortner.longUrl%>">
                 <%= urlShortner.longUrl%> </a>
              </td>
              <td> <a href="<%=urlShortner.shortUrl%>"><%=urlShortner.shortUrl%></a>
              </td>
              <td><%=urlShortner.clicks%></td>
            </tr>
          <%})%>
          
        </tbody>
    </table>
    
    
  <%- include('./partials/footer.ejs') %>
 
  <%- include('./partials/scriptTag.ejs') %>
</body>
</html>